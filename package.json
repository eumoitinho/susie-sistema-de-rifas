{
  "name": "rifas-online",
  "version": "1.0.0",
  "description": "Sistema de gerenciamento de rifas online",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && node --watch server.js",
    "dev:frontend": "cd frontend && npx next dev -p 3006",
    "build": "cd frontend && next build",
    "start": "cd frontend && next start"
  },
  "keywords": ["rifas", "raffles", "nextjs", "express"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
