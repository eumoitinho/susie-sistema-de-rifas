{
  "name": "rifas-online",
  "version": "1.0.0",
  "description": "Sistema de gerenciamento de rifas online",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && node --watch server.js",
    "dev:frontend": "cd frontend && npx next dev -p",
    "build": "cd backend && npm install"
  },
  "keywords": ["rifas", "raffles", "nextjs", "express"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
